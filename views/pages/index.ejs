</section>

<!-- loging and register modals -->
	
	<div id="loginModal" style="display:none;" ng-contsroller="authController">
	    <h1>User Login</h1>
	    <form 
	    	id="loginForm" 
	    	name="loginForm"  
	    	action="/login" 
	    	method="post">

			<p class="text-warning">{{error_message}}</p>
			<label for="userName">Username:</label>
			<input type="text" name="email" placeholder="Username" class="form-control" tabindex="1">
			<label for="password">Password:</label>
			<input 
				type="password" 
				name="password" 
				class="form-control" 
				tabindex="2">

			<div class="text-center">
				<button 
					type="submit" 
					name="loginbtn" 
					id="loginbtn" 
					class="btn btn-primary hidemodal text-center" 
					tabindex="3" 
					ng-click="login()">
					Log In
				</button>
			</div>
	    </form>
	</div>

	<div id="signUpModel" style="display:none;" ng-controller="authController">
	    <h1>Register</h1>
	    <form id="signUpForm" name="signUpForm" action="/signup" method="post">
		      <p class="text-warning">{{error_message}}</p>
	<!-- 
		      <label for="userName">Name:</label>
		      <input type="text" ng-model="user.userName" id="userName" class="txtfield" tabindex="1"> -->

		      <label for="Email">Email:</label>
		      <input type="text" ng-model=""  id="" class="txtfield" tabindex="2" name="email">

		      <label for="password">Password:</label>
		      <input type="password" ng-model="user.password" id="password" class="txtfield" tabindex="2" name="password">
		      
		      <div class="text-center">
		      	<button type="submit" name="signUpBtn" id="signUpBtn" class="btn btn-primary hidemodal text-center" tabindex="3">Register</button>
		      </div>
	    </form>
	</div>

	</body>



</html>