<!--****Signup***-->
<section id="signup">
	<br>
	<h1> Be a Part of Your Community, <br> Sign Up Now!</h1>
		<div id="holder_signup"> </div>
	<div class="row">
		<div class="col-md-offset-4 col-md-4">
			<a href="#signUpModel" id="signUpTrigger">
				<button type="button" class="btn btn-primary btn-lg btn-block">Become a Service Provider</button>
			</a>
		</div>
	</div>
</section>


<!--****Footer***-->
<section id="footer">
